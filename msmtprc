# Set default values for all accounts
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /var/log/msmtp.log

# SMTP server configuration
account default
host smtp.sendgrid.net              # Replace with your SMTP server
port 587                             # Common SMTP port for STARTTLS
user your-smtp-username              # Replace with your SMTP username
password your-smtp-password          # Replace with your SMTP password
from your-email@example.com          # Set the sender's email address
